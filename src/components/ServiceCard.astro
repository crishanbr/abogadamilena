---
import { Image } from "astro:assets";
import getImageSrc from "@/utils/getImageSrc";
import type { Service } from "@/utils/types";

interface Props {
  service: Service;
}

const { service } = Astro.props;
---

<div class="relative bg-white rounded-sm shadow-lg overflow-hidden transition-all hover:shadow-2xl">
  <div class="relative h-48">
    <Image
      src={getImageSrc(service.background)}
      alt={service.title}
      class="absolute top-0 left-0 w-full h-full object-cover opacity-70"
    />
    <div class="absolute inset-0 bg-primary/60" />
    <div class="relative z-10 h-full p-4 flex flex-col items-center justify-center text-center">
      <i class={`text-4xl ${service.icon} text-white mb-4`} />
      <h3 class="text-3xl font-bold text-white mb-2">{service.title}</h3>
      <p class="text-white/80">{service.description}</p>
    </div>
  </div>
  <div class="p-6 bg-white h-full">
    <ul class="text-[#333333]">
      {service.items.map((item) => (
        <li class="flex items-center gap-3 mb-2">
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            width="24" 
            height="24" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="#C4A349" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            class="w-5 h-5 flex-shrink-0"
          >
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
          <span class="text-sm">{item.name}</span>
        </li>
      ))}
    </ul>
  </div>
</div>